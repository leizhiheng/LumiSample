<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/px18"
    android:paddingRight="@dimen/px18"
    android:minHeight="@dimen/px70"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cell_left"
        android:layout_width="@dimen/px30"
        android:layout_height="@dimen/px30"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px18"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        tools:src="@drawable/ic_launcher_background"
        tools:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/px18"
        android:layout_marginTop="@dimen/px16"
        android:layout_marginBottom="@dimen/px16"
        android:layout_toRightOf="@id/iv_cell_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cell_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="@dimen/px244"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            tools:text="Title" />


        <TextView
            android:id="@+id/tv_cell_left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px3"
            android:layout_marginRight="@dimen/px18"
            android:layout_weight="1"
            android:maxWidth="@dimen/px260"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            tools:text="SubTitle" />


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_cell_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxWidth="@dimen/px198"
        android:maxLines="1"
        android:textColor="@color/black_030303"
        android:textSize="@dimen/px16"
        android:visibility="gone"
        tools:text="Content" />

    <ImageView
        android:id="@+id/iv_cell_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />
</LinearLayout>